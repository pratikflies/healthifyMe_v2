  <body>
    <div class="sidebar">
      <div class="button-container">
      <!--logout button-->
      <form action="/logout" method="post">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <button type="submit" class="button">Logout</button>
      </form> 
      <!--reset button-->
      <button type="submit" class="button" id="reset-button" style="background-color:#FF0000">Reset</button>
      <!--adding button for payment link-->
      <form action="/admin/dashboard" method="get">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <button type="submit" class="button">Dashboard</button>
      </form> 
    </div>
      <br />
      <img src="../logo.png" alt="Logo" class="logo" />
      <div class="custom__btns dropdown hidden">
        <button class="custom__btn btn--filter">Filter By</button>
        <div class="dropdown-content">
          <a href="#" data-option="running">Running ğŸƒâ€â™‚ï¸</a>
          <a href="#" data-option="cycling">Cycling ğŸš´</a>
          <a href="#" data-option="swimming">Swimming ğŸŠâ€â™€ï¸</a>
          <a href="#" data-option="show-all">Show All</a>
        </div>
      </div>
      <ul class="workouts">
        <form class="form hidden">
          <div class="form__row">
            <label class="form__label">Type</label>
            <select class="form__input form__input--type">
              <option value="running">Running ğŸƒâ€â™‚ï¸</option>
              <option value="cycling">Cycling ğŸš´</option>
